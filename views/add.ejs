<% include ./partials/header.ejs %>
<div class="w-full min-h-screen flex items-center justify-center bg-cover bg-center px-10 py-8 text-white" style="background-image: url('https://i.pinimg.com/originals/62/2f/c3/622fc384da3cf92e94dfb115ffe961a8.jpg')">
    <div class="text-center w-full ">
        <h1 class="text-4xl">Create a new Post</h1>
        <hr class="opacity-10 mt-3">
        <form class="flex justify-center items-center flex-col" action="createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-2 py-2 rounded-md mt-2" type="file" name="postimage"> 
            <input class="block w-1/3 px-2 py-2 border-2 rounded-md mt-2 text-black" type="text" placeholder="Title" name="title">
            <textarea class="block w-1/3 px-2 py-2 border-2 rounded-md mt-2 text-black" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-2 py-2 rounded-md mt-2 bg-red-700" type="submit" value="Create Post">
        </form>
    </div>
</div>


