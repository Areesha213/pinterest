<% include ./partials/header.ejs %>
<div class="profile py-5 w-full min-h-screen bg-cover bg-center bg-opacity-60 text-black pt-5 p-5" style="background-image: url('https://i.pinimg.com/originals/62/2f/c3/622fc384da3cf92e94dfb115ffe961a8.jpg')">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% posts.forEach(function(elem){ %>
                <div class="card rounded-lg overflow-hidden bg-white bg-opacity-60 ">
                    <img class="w-full h-64 object-cover" src="/images/uploads/<%= elem.image %>" alt="img">
                    <div class="p-4">
                        <h5 class="text-xl font-semibold truncate"><%= elem.title %></h5>
                        <p class="mt-1 text-xl font-bold  text-gray-500 truncate">@<%= elem.user.username %></p>
                        <p class="mt-1 text-md truncate"><%= elem.description %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>



