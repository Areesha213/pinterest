<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-cover bg-center flex items-center justify-center" style="background-image: url('https://getwallpapers.com/wallpaper/full/b/8/8/51793.jpg')">
        <div class="w-[35vw] min-h-screen  bg-white bg-opacity-60 px-20 py-10 rounded-[30px]">
            <img class="w-20 h-20 rounded-md block mb-5 mx-auto my-auto" src="../images/logo1.webp" alt="">
            <h1 class="text-4xl tracking-tighter capitalize font-semibold text-zinc-700 text-center leading-none">
                Create New Account</h1>
            <form action="/register" method="post">
                <label class=" font-semibold " for="username">Username</label>
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="username" id="">
                <label class=" font-semibold " for="fullname">Full Name</label>
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname"
                    placeholder="Full Name" id="">
                <label class=" font-semibold " for="email">Email</label>
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
                    placeholder="email" id="">
                <label class=" font-semibold " for="contact">Number</label>
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact"
                    placeholder="username" id="">
                <label class=" font-semibold " for="password">Password</label>
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
                    placeholder="password" id="">
                <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 rounded-full text-white"
                    type="submit" value="Create New Account">
                <p class="mt-10 mx-auto text-xs font-semibold text-zinc-600 text-center">By continuing, you agree to
                    Pinterest's Terms of Service; Opens a new tab and acknowledge you've read
                    our Privacy Policy Notice at collection.</p>
            </form>
            <a class="inline-block mt-7 font-semibold text-center text-sm text-zinc-700 w-full" href="/"> Login Existing
                Account</a>

        </div>
    </div>

    <% include ./partials/footer.ejs %>