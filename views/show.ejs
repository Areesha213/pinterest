<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-cover bg-center bg-opacity-60 text-white pt-1" style="background-image: url('https://i.pinimg.com/originals/62/2f/c3/622fc384da3cf92e94dfb115ffe961a8.jpg')">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="img">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                <h6 class="text-xl font-semibold opacity-500"><%= elem.description %></h6>
    
            </div>
       <% }) %>
        
    </div>

</div>

<% include ./partials/footer.ejs %>